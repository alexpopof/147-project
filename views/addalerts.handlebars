    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container">
		<div align="center" style="margin-bottom: 40px;">
			<h1>Add an Alert</h1>
			<h2>Added Sunday 2/9</h2>		
		</div>
		<div style="margin: 0 auto; width:70%; border:5px solid black; padding: 30px; font-size:24px;">
			<form class="bs-example bs-example-form" role="form" method="get" action="/">
				<div class="input-group input-group-lg" align="left">
					<label>Venue</label><br/>
					<select name="venue">
					{{#each venues}}
						<option value = "{{name}}">{{name}}</option>
					{{/each}}
					</select>
				</div>
				<hr/>

				<div class="input-group input-group-lg">
					<label>Alert description</label><br/>
					<textarea rows="5" cols="25" name="description"></textarea>
				</div>

				<hr/>

				<div class="input-group input-group-lg">
					<label>Severity</label><br/>
					<div class="btn-group" data-toggle="buttons">					  
						<label class="btn btn-danger" style="font-size:32px;">
						    <input type="radio" name="severity" value = "severe" id="option1" > Severe
						</label>
						<label class="btn btn-warning " style="font-size:32px;">
						    <input type="radio" name="severity" value = "minor" id="option2">Minor
						</label>
						<label class="btn btn-primary " style="font-size:32px;">
						    <input type="radio" name="severity" value ="info" id="option3">FYI
						</label>
						<label class="btn btn-success " style="font-size:32px;">
						    <input type="radio" name="severity" value = "kudos" id="option4">Kudos
						</label>
					</div>
				</div>

				<hr/>

				<div class="input-group input-group-lg">
					<input type="submit" value="Submit Alert" class="btn btn-info btn-text">
				</div>

			</form>
		</div>

	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>
</html>