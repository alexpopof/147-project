<!doctype html>

<html>
<head>
	<title>Add Alerts</title>	
	<meta charset="utf-8">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
  	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
  	<link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
  	<link rel="stylesheet" href="/css/introHCI.css">
  	<script src="//code.jquery.com/jquery-1.9.1.js"></script>
 	<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
 	<script src="/js/jquery.ui.touch-punch.min.js"></script>
  	<script src="/js/bootstrap.min.js"></script>
  	<script src="/js/introHCI.js"></script>
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="container">
		<div style="width: 100%; float: left; margin: 20px;">
	    	<a href="/" class="btn btn-info btn-lg btn-text"><i class="glyphicon glyphicon-chevron-left"></i> Back</a> 
			<a href="/" class="btn btn-info btn-lg btn-text btn-home"><i class="glyphicon glyphicon-home"></i> Home</a>  
		</div>
		<div align="center" style="margin-bottom: 40px;">
			<h1 style="font-size:48px; ">Add an Alert</h1>	
		</div>
		
		<div style="margin: 0 auto; width:70%; border:5px solid black; padding: 30px; font-size:24px;">
			<form class="bs-example bs-example-form" id="add-alert-form" role="form" method="post" action="/">
				<div class="input-group input-group-lg" align="left">
					<label>Venue</label><br/>
					<select name="venue" id="select-venue">
						<option value = "default">Choose a venue ...</option>
						<optgroup label = "Food">
						{{#each food_venues}}
							<option value = "{{name}}">{{name}}</option>
						{{/each}}
						</optgroup>
						<optgroup label = "Workout">
						{{#each workout_venues}}
							<option value = "{{name}}">{{name}}</option>
						{{/each}}
						</optgroup>
						<optgroup label = "Party">
						{{#each party_venues}}
							<option value = "{{name}}">{{name}}</option>
						{{/each}}
						</optgroup>
					</select>
					<div class="alert alert-danger" style="width: 100% float: left; text-align: center;
    				vertical-align: middle; font-size: 24px; margin-top: 10px; display:none;"
    				id="select-venue-dropdown-error">Error! You must select a venue.</div>
				</div>
				<hr/>

				<div class="input-group input-group-lg">
					<label>Alert description</label><br/>
					<textarea rows="5" cols="25" name="description"></textarea>
				</div>

				<hr/>

				<div class="input-group input-group-lg">
					<label>Severity</label><br/>
					<p>Report your problem or compliment.</p>
					<div class="btn-group" data-toggle="buttons">					  
						<label class="btn btn-danger" style="font-size:32px;">
						    <input type="radio" name="severity" value = "danger" id="option1" > Severe
						</label>
						<label class="btn btn-warning " style="font-size:32px;">
						    <input type="radio" name="severity" value = "warning" id="option2">Minor
						</label>
						<label class="btn btn-primary " style="font-size:32px;">
						    <input type="radio" name="severity" value ="primary" id="option3">FYI
						</label>
						<label class="btn btn-success " style="font-size:32px;">
						    <input type="radio" name="severity" value = "success" id="option4">Kudos
						</label>
					</div>
					<div class="alert alert-danger" style="width: 100% float: left; text-align: center;
    				vertical-align: middle; font-size: 24px; margin-top: 10px; display:none;"
    				id="select-venue-severity-error">Error! You must select one of the above buttons.</div>
				</div>

				<hr/>

				<div class="input-group input-group-lg">
					<input type="submit" value="Submit Alert" class="btn btn-info btn-text">
				</div>

			</form>
		</div>

	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script>
		console.log('{{venue}}');
		var venue = '{{venue}}';
		if (venue != '')
			$("#select-venue").val('{{venue}}');
	</script>
</body>
</html>