<!doctype html>

<html>
<head>
	<title>Home</title>	
	<meta charset="utf-8">

	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
	<link rel="stylesheet" href="/css/introHCI.css">
	<script src="//code.jquery.com/jquery-1.9.1.js"></script>
	<script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
	<script src="/js/jquery.ui.touch-punch.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/introHCI.js"></script>
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="" align="center">
		
		<div style="width: 100%; float: left; margin: 20px;">
			<h1 style = 'font-size: 80px'>Clutch</h1>
			<p style = 'font-size: 46px;'>"keep businesses accountable"</p>
		</div>

		<div style="width: 100%; float: left; margin: 20px;">
			<a href="/addalerts" class="btn btn-primary btn-lg btn-text-home"><i class="glyphicon glyphicon-flash"></i> Add an Alert</a>

			<a href="/categories" class="btn btn-primary btn-lg btn-text-home"><i class="glyphicon glyphicon-star"></i> Edit Favorites</a>

			<a href="/categories/explore" class="btn btn-primary btn-lg btn-text-home"><i class="glyphicon glyphicon-eye-open"></i> Explore Venues</a>
		</div>


		<div class="col-sm-4" align="center" style="width: 100%; float left; margin: 20px;">
			<div class="list-group" align="center" id="home-alerts" style="box-shadow: 0 1px 2px rgba(0,0,0,0.6);">			
			{{#if alerts.length}}
				<div style="margin: 20px; padding-top: 10px;">
					{{#if all}}
					<h1>Current Alerts: All</h1>					
					{{else}}
					<h1>Current Alerts: Favorite Venues</h1>					
					{{/if}}
				</div>	
				{{#each alerts}}
				<a href="/alerts/{{venue}}" class="btn btn-{{severity}} alert" >
					<div class = 'alert-venue'>{{venue}}</div>
					<div class = 'alert-subtitle'  >"{{alert}}"</div>
					<p class = 'alert-timestamp italic'>{{pretty_timestamp}}</p>
					<!-- Will add closed or open tag here -->
					<!--<p class = 'alert-timestamp italic'>{{status}}</p>-->
				</a>
				{{/each}}
			{{else}}
				<div style="width: 100%; float: left; margin: 20px;">
					<h1>No Current Alerts</h1>					
				</div>
			{{/if}}
			{{#if all}}
				<div style="width: 100%; float: left; margin: 20px;">
					<a href="/" class="btn btn-primary btn-lg btn-text-home">Alerts for Faves Only</a>				
				</div>

			{{else}}
				<div style="width: 100%; float: left; margin: 0px;">
					<a href="/?all=true" class="btn btn-primary btn-lg btn-text-home">View All Alerts</a>				
				</div>
			{{/if}}
			<p style="font-size: 32px;"><u>Legend</u><br/>
						<span style="color:#C12E2A">Severe Issue</span> </br/> 
						<span style="color: #E38D13">Minor Issue</span> </br/>
						<span style="color: #428BCA">Useful Information</span> </br/>
						<span style="color: #419641">Compliment</span></br/>
			</p>
			</div>

		</div>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>
</html>

